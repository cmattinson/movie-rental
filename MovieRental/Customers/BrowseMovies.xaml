<Page x:Class="MovieRental.BrowseMovies"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieRental"
      mc:Ignorable="d" 
      d:DesignHeight="664" d:DesignWidth="1292
      "
      Title="BrowseMovies" Foreground="White">

    <Grid>
        <ListBox x:Name="MovieList" HorizontalAlignment="Left" Height="664" VerticalAlignment="Top" Width="279" Margin="1013,0,0,0" SelectionChanged="Movies_SelectionChanged" Background="#FF141414" FontSize="14" Foreground="White" BorderBrush="#FFE50914"/>
        <Image x:Name="Poster" HorizontalAlignment="Left" Height="340" VerticalAlignment="Top" Width="342" Margin="7,11,0,0"/>
        <TextBlock x:Name="MovieTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontFamily="Source Sans Pro Black" FontSize="36" Foreground="#FFCF0000" Margin="276,0,0,0"/>
        <TextBlock x:Name="OverviewText" HorizontalAlignment="Left" Margin="276,96,0,0" TextWrapping="Wrap" Text="Overview" VerticalAlignment="Top" RenderTransformOrigin="-0.245,-1.312" FontFamily="Source Sans Pro Semibold" FontSize="24" Foreground="White"/>
        <TextBlock x:Name="MovieOverview" TextWrapping="Wrap" Text="Overview Body" FontSize="20" Foreground="White" Margin="276,146,371,124"/>
        <TextBlock x:Name="GenreText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Genre" VerticalAlignment="Top" Margin="276,60,0,0" FontSize="20" RenderTransformOrigin="0.424,0.525" Foreground="White"/>
        <Button x:Name="Queue" Content="Add to Queue" HorizontalAlignment="Left" Margin="713,545,0,0" VerticalAlignment="Top" Width="103" Click="Queue_Click" Background="#FF141414" Foreground="White" BorderBrush="#FFE50914"/>
        <Button x:Name="Rent" Content="Rent" HorizontalAlignment="Left" Margin="846,545,0,0" VerticalAlignment="Top" Width="75" Click="Rent_Click" Background="#FF141414" Foreground="White" BorderBrush="#FFE50914"/>


    </Grid>
</Page>
