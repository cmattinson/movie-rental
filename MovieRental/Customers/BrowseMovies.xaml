<Page x:Class="MovieRental.BrowseMovies"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieRental"
      mc:Ignorable="d" 
      d:DesignHeight="664" d:DesignWidth="1292
      "
      Title="BrowseMovies">

    <Grid>
        <ListBox x:Name="MovieList" HorizontalAlignment="Left" Height="664" VerticalAlignment="Top" Width="205" Margin="1087,0,0,0" SelectionChanged="Movies_SelectionChanged"/>
        <Image x:Name="Poster" HorizontalAlignment="Left" Height="340" VerticalAlignment="Top" Width="324" Margin="18,0,0,0"/>
        <TextBlock x:Name="MovieTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontFamily="Source Sans Pro Black" FontSize="36" Foreground="#FFCF0000" Margin="354,0,0,0"/>
        <TextBlock x:Name="OverviewText" HorizontalAlignment="Left" Margin="354,96,0,0" TextWrapping="Wrap" Text="Overview" VerticalAlignment="Top" RenderTransformOrigin="-0.245,-1.312" FontFamily="Source Sans Pro Semibold" FontSize="24" Foreground="Black"/>
        <TextBlock x:Name="MovieOverview" TextWrapping="Wrap" Text="Overview Body" FontSize="20" Foreground="Black" Margin="354,146,259,124"/>
        <TextBlock x:Name="GenreText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Genre" VerticalAlignment="Top" Margin="354,60,0,0" FontSize="20" RenderTransformOrigin="0.424,0.525"/>
        <Button x:Name="Queue" Content="Add to Queue" HorizontalAlignment="Left" Margin="791,546,0,0" VerticalAlignment="Top" Width="103" Click="Queue_Click"/>
        <Button x:Name="Rent" Content="Rent" HorizontalAlignment="Left" Margin="924,546,0,0" VerticalAlignment="Top" Width="75" Click="Rent_Click"/>


    </Grid>
</Page>
