<Window x:Class="MovieRental.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF141414">
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Height="23" Margin="240,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FF141414" Foreground="White"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="95,80,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="95,177,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="188,341,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="240,179,0,0" VerticalAlignment="Top" Width="120" Height="24" Background="#FF141414" Foreground="White"/>
    </Grid>
</Window>
