<Window x:Class="MovieRental.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="User" Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.94,2.482" Margin="55,61,0,0"/>
        <Label x:Name="Password" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.94,2.482" Margin="55,135,0,0"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="137,64,0,0"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="137,138,0,0"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="164,310,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>

    </Grid>
</Window>
