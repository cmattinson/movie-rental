<UserControl x:Class="MovieRental.MovieGridItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieRental"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="185" Width="200">
    <Grid>
        <Image x:Name="Poster" HorizontalAlignment="Left" Height="201" VerticalAlignment="Top" Width="185" Margin="8,9,0,0"/>
        <TextBlock x:Name="MovieText" HorizontalAlignment="Left" Margin="40,229,0,0" TextWrapping="Wrap" Text="Movie Title" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
</UserControl>
