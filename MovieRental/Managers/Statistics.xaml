      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieRental.Managers"
      mc:Ignorable="d" 
      d:DesignHeight="624" d:DesignWidth="1282"
      Title="Statistics">

    <Grid>
        <ListBox x:Name="Stats" HorizontalAlignment="Left" Height="499" Margin="32,95,0,0" VerticalAlignment="Top" Width="550"/>
